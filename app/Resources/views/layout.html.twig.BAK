        jQuery(document).ready(function(){
            $(".dropdown").hover(
                function() { $('.dropdown-menu', this).fadeIn("fast");
                },
                function() { $('.dropdown-menu', this).fadeOut("fast");
            });
        });

        $('.datepicker').datepicker();

        $('.tips').tooltip();
        -->
        </script>
    </body>
</html>