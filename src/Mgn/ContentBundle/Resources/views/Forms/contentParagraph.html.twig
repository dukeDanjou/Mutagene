<section id="{{ content.id }}" class="sortable panel">

	<div class="panel-body">

		<form id="formContents_{{ content.id }}" action="{{ path('mgn_content', {'container': 'article', 'id': article.id, 'content': content.id, 'type': 'paragraph', 'action': 'save'})}}" method="post" {{ form_enctype(form_content) }} class="form-horizontal" role="form">

		    <div class="form-group">

			    <div class="col-lg-12">
			        
			        <label for="mgn_articlebundle_articletype_contenu">Paragraphe <img class="loader" src="{{ asset('admin/img/ajax-loader.gif') }}" title="" /></label>

			        {{ form_widget(form_content.paragraph, { 'attr' : { 'class' : 'form-control textarea_elastic formcontent', 'rows' : '2' } }) }}

			    </div>

		    </div>
		        
		    {{ form_rest(form_content) }}

			<div class="pull-right">

				<button type="button" class="btn btn-primary btn-xs content-save">Enregistrer</button>

				<button type="button" class="btn btn-danger btn-xs buttoncontentsdelete" href="{{ path('mgn_admin_article_contents_delete', {'content': content.id})}}">Supprimer</button>

			</div>

		</form>

	</div>

</section>