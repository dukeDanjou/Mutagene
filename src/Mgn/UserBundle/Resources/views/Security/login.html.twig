{% extends "MgnUserBundle::layout.html.twig" %}

{% block arianne %}
    {{ parent() }}
    </li>
    <li class="active">
        {{ 'user.ariane.login'|trans }}
    </li>
{% endblock %}

{% block body %}

<div class="row">

    <div class="col-lg-12">

        <div class="page-header">
            <h1>{{ 'security.login.title'|trans }}</h1>
        </div>

        <p>{{ 'security.login.message'|trans }}</p>

        {% if error %}

        <div class="alert alert-danger alert-dismissable">

            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>

            <strong>{{ 'security.login.form.error'|trans }} !</strong> {{ error.message|trans }}
            
        </div>

        {% endif %}

        {% for message in app.session.flashbag.get('success') %}
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{ message }}
        </div>
        {% endfor %}

        {% for message in app.session.flashbag.get('danger') %}
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            {{ message }}
        </div>
        {% endfor %}

        <form role="form" action="{{ path('login_check') }}" method="post" class="form-horizontal">

           <div class="form-group">

                <label for="username" class="col-lg-2 control-label">{{ 'security.login.form.identifying'|trans }}</label>

                <div class="col-lg-8">

                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" />

                    <p class="help-block"><strong>{{ 'security.login.form.note'|trans }}:</strong> {{ 'security.login.form.note.identifying'|trans }}</p>

                </div>

            </div>

            <div class="form-group">

                <label for="password" class="col-lg-2 control-label">{{ 'security.login.form.password'|trans }}</label>

                <div class="col-lg-8">

                    <input type="password" id="password" name="_password" class="form-control" />

                </div>

            </div>

            <div class="form-group">

                <div class="col-lg-offset-2 col-lg-8">

                    <div class="checkbox">

                        <label>

                            <input type="checkbox"> {{ 'security.login.form.remember'|trans }}

                        </label>

                    </div>

                    <p class="help-block">

                        <strong>{{ 'security.login.form.warning'|trans }}:</strong> {{ 'security.login.form.warning.remember'|trans }} !

                    </p>

                </div>

            </div>

            <div class="form-group">

                <div class="col-lg-offset-2 col-lg-10">

                    <button type="submit" class="btn btn-primary">{{ 'user.button.connect'|trans }}</button>

                    <a class="btn btn-default" href="{{ path('user.resetting') }}">{{ 'user.button.forget_password'|trans }}</a>

                </div>

            </div>

        </form>

    </div>

</div>

{% endblock %}