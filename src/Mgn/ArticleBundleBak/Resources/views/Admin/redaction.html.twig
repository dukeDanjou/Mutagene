{% extends "MgnArticleBundle::admin.html.twig" %}

{% block title %}
    Liste des articles - {{ parent() }}
{% endblock %}

{% block sidebar_articles %}active{% endblock %}
{% block sidebar_articles_write %}active{% endblock %}

{% block body %}

	<div class="row">

		<div class="col-lg-12">

			<div class="page-header">
				<h1>
					<i class="fi-pencil"></i> Ajouter un nouvel article
				</h1>

			</div>

		</div>

		{% for message in app.session.flashbag.get('success') %}
		<div class="col-lg-12">
	        <div class="alert alert-success">
	        	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	            {{ message }}
	        </div>
        </div>
        {% endfor %}

        <div class="col-lg-12">

        	{% include "MgnArticleBundle:Forms:article.html.twig" %}

        </div>

	</div>

{% endblock %}